<Window x:Class="Keystrokes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Keystrokes"
        mc:Ignorable="d"
        Title="MainWindow" Height="980" Width="1800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Background="DimGray">
            <ToggleButton Name="NavBtn0" Content="Keystrokes" Click="ChangeToKeystrokesClicked" Width="150" FontSize="18"></ToggleButton>
            <ToggleButton Name="NavBtn1" Content="Classification" Click="ChangeToClassificationClicked" Width="150" FontSize="18"></ToggleButton>
            <!--<ToggleButton Name="NavBtn6" Content="Skeletons" Click="ChangeToSkeletonsClicked" Margin="3" Width="150" FontSize="18"></ToggleButton>-->
        </StackPanel>

        <Frame Grid.Row="1" Grid.Column="0" x:Name="MainWindowFrame" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
